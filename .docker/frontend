FROM node:lts

RUN mkdir -p /app
COPY /frontend/ /app/
WORKDIR /app
RUN yarn install

VOLUME /app/node_modules
VOLUME /app/.cache
VOLUME /app/.parcel-cache

RUN yarn run parcel --version
RUN rm -f babel.config.js  && yarn build  --no-source-maps

CMD cd /frontend && yarn install && yarn run parcel --version && yarn start
