FROM node:lts

RUN mkdir -p /app /.parcel-cache
COPY /frontend/ /app/
WORKDIR /app
RUN yarn install


RUN yarn run parcel --version
RUN rm -f babel.config.js  && yarn build --no-source-maps --cache-dir /.parcel-cache

CMD yarn install && yarn run parcel --version && yarn start --cache-dir /.parcel-cache
